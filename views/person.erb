<% if person && person[:name] %>
  <li class="<%= person[:rule] %><%= person[:has_phone]? " phone" : "" %>">
  <span class="phone-icon"></span>
  <span class="<%= person[:rule] %>-name">
    <%= person[:rule].gsub(/(\W|\_)/,' ').gsub(/\w+/) { |w| w.capitalize } %>:
    <%= person[:name] %>
  </span>
  <%if person[:contact_methods] && person[:contact_methods].any? %>
    <ul class="contact-methods">
    <%= partial(:contact_method, collection: person[:contact_methods]) %>
    </ul>
  <% end %>
</li>
<% end %>
